@model IEnumerable<_6S.Context.Tbl_Join_ALL>
@{
    ViewBag.Title = "Xem báo cáo";
}
<div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <!-- Thay đổi modal-dialog thành modal-xl -->
        <div class="modal-content  w-100" style="max-width: 100%; width: auto;">
            <div class="modal-header">
                <h5 class="modal-title" id="pdfModalLabel">Báo cáo 6S : <span id="maBCPlaceholder" onclick="downloadPDF(document.getElementById('maBCPlaceholder').innerText)"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <embed id="pdfEmbed" src="" type="application/pdf" style="width: 100%;" height="500">
            </div>
        </div>
    </div>
</div>


